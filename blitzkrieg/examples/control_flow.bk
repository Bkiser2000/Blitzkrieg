# Multiple for loops
PRINT("")
PRINT("=== Loop Examples ===")

# Simple counting
PRINT("Counting up:")
FOR i = 1 TO 5 THEN
    PRINT("  " + STR(i))
END

# Counting with step
PRINT("Counting by 3s:")
FOR i = 3 TO 15 STEP 3 THEN
    PRINT("  " + STR(i))
END

# Nested loops - multiplication table
PRINT("")
PRINT("=== Multiplication Table (3x3) ===")
FOR i = 1 TO 3 THEN
    FOR j = 1 TO 3 THEN
        VAR product = i * j
        PRINT(STR(i) + " Ã— " + STR(j) + " = " + STR(product))
    END
    PRINT("---")
END

# While loop example
PRINT("")
PRINT("=== While Loop Example ===")
VAR countdown = 5
PRINT("Countdown:")
WHILE countdown > 0 THEN
    PRINT("  " + STR(countdown))
    VAR countdown = countdown - 1
END
