# Using expression-style function
FUN classify_simple(n) -> IF n > 0 THEN IF n % 2 == 0 THEN "positive even" ELSE "positive odd" ELSE IF n < 0 THEN "negative" ELSE "zero"

PRINT("")
PRINT("=== Number Classification ===")
VAR test_numbers = [-4, -3, 0, 3, 4]
FOR i = 0 TO 4 THEN
    VAR num = test_numbers[i]
    PRINT(STR(num) + " is " + classify_simple(num))
END

